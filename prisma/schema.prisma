generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id                String     @id @default(cuid())
  name              String
  slug              String     @unique
  heroTitle         String
  heroSubtitle      String
  heroImage         String?
  guideTitle        String
  guideContent      String
  guideImage        String?
  includedItems     String
  notIncludedItems  String
  itinerarySteps    String
  faqItems          String
  galleryImages     String?
  isActive          Boolean    @default(true)
  tripDates         TripDate[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
}

model TripDate {
  id              String    @id @default(cuid())
  tripId          String?
  trip            Trip?     @relation(fields: [tripId], references: [id])
  date            DateTime
  capacity        Int       @default(30)
  reservedSpots   Int       @default(0)
  pricePerPerson  Int
  depositAmount   Int       @default(30000) // 300 ILS in agorot
  minParticipants Int       @default(15)
  minReachedAt    DateTime? // Timestamp when minimum was reached
  status          String    @default("OPEN") // OPEN, CLOSED, SOLD_OUT, CANCELLED
  bookings        Booking[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model User {
  id          String    @id @default(cuid())
  fullName    String
  email       String    @unique
  phone       String?
  whatsapp    String?
  notes       String?
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Booking {
  id                    String    @id @default(cuid())
  tripDateId            String
  tripDate              TripDate  @relation(fields: [tripDateId], references: [id])
  userId                String?
  user                  User?     @relation(fields: [userId], references: [id])
  fullName              String
  email                 String
  phone                 String
  participantsCount     Int
  totalPrice            Int
  depositAmount         Int
  depositStatus         String    @default("PENDING") // PENDING, PAID, CANCELLED, REFUNDED
  remainingAmount       Int       @default(0)
  remainingStatus       String    @default("PENDING") // PENDING, PAID, CANCELLED, REFUNDED
  remainingDueDate      DateTime?
  remainingPaidAt       DateTime?
  paymentToken          String    @unique @default(cuid())
  paymentIntentId       String?
  remainingPaymentIntentId String?
  emailSent             Boolean   @default(false)
  whatsappSent          Boolean   @default(false)
  adminNotes            String?
  payments              Payment[]
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

model Payment {
  id                    String   @id @default(cuid())
  bookingId             String
  booking               Booking  @relation(fields: [bookingId], references: [id])
  provider              String   @default("stripe")
  type                  String   // deposit, remaining, refund
  amount                Int
  currency              String   @default("ILS")
  stripePaymentIntentId String?
  stripeSessionId       String?
  status                String   @default("pending") // pending, succeeded, failed, refunded
  metadata              String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin") // admin, viewer
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContentBlock {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  type      String   @default("text")
  category  String   @default("general")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settings {
  id              String   @id @default(cuid())
  key             String   @unique
  value           String
  type            String   @default("text")
  category        String   @default("general")
  label           String
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  type      String
  title     String
  message   String
  severity  String   @default("info")
  isRead    Boolean  @default(false)
  link      String?
  metadata  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Media {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  mimeType    String
  size        Int
  url         String
  category    String   @default("general")
  alt         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
